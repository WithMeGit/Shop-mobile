
@{
    Layout = null;
}

@model ProjectLab06.Areas.Admin.Data.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Flat HTML5/CSS3 Login Form</title>
    <link rel="stylesheet" href="~/Assets/Admin/Login/css/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootsxtrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    <div class="login-page">
        <div class="form">
            @*<form class="register-form" method="post">*@
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "register-form" }))
            {
                @Html.AntiForgeryToken()
                @*<input type="text" placeholder="name" />*@
                @Html.TextBoxFor(m => m.User, new { placeholder = "Name" })
                @*<input type="password" placeholder="password" />*@
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" });
                @*<input type="text" placeholder="email address" />*@
                @Html.TextBoxFor(m => m.Emailaddress, new { placeholder = "Emailaddress" })
                <button>create</button>
                <p class="message">Already registered? <a href="#">Sign In</a></p>
            }
            @*</form>*@

            @*<form class="login-form">*@
            @using (Html.BeginForm((new { @class = "login-form" })))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })

                @*<input type = "text" placeholder = "username"/>*@
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" });
                @*<input type = "password" placeholder = "password"/>*@
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" });
                <button type="submit">login</button>
                <p class="message">Not registered? <a href="#">Create an account</a></p>
            }
            @*</form>*@
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Assets/Admin/Login/js/index.js"></script>
</body>
</html>

